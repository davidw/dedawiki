<% @title = "#{Siteinfo.main.name} Password Reset" %>

  <div>
    <p>
      Lost your password?  Please give us your email address, and
      we'll send you a new one.
    </p>

<% form_tag :action => 'reset_password' do %>

<p><label for="user_email">Email:</label><br/>
<%= text_field 'user', 'email'  %></p>

<p><%= submit_tag 'Send Password' %></p>
<% end %>
</div>
